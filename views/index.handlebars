<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center p-2">
      <img src="http://img.dyhu.co/bootcamp/homework-11/burger.png" class="center" style="width:300px;">
      <h1>Eat a Burger</h1>
    </div>
    
<div class="col-sm-6 text-center p-4">
<h2>Burgers to devour</h2>
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
        
<div class="col-sm-6 text-center p-4">
<h2>Burgers you've devoured</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
        
<div class="col-sm-12 text-center p-2">
<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name"> <button class="btn btn-secondary btn-sm" type="submit">Add a <i class="fas fa-hamburger"></i></button>
  </div>
</form>
</div>
    
  </div>
</div>
